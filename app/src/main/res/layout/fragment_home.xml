<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_viewport"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Screens.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="1dp"
            app:cardElevation="3dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            app:contentPadding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/health_hazards_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Health Hazards"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/allergies_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Allgergies: " />

                    <TextView
                        android:id="@+id/allergies_input"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nuts"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/incomp_meds_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Incompatible medication: " />

                    <TextView
                        android:id="@+id/incomp_meds_input"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Anaesthetic"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="1dp"
            app:cardElevation="3dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            app:contentPadding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/emergency_contacts_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Emergency Contacts"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/contact1_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="First contact: " />

                <TextView
                    android:id="@+id/contact2_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Second contact: " />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="1dp"
            app:cardElevation="3dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            app:contentPadding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/crucial_information"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Crucial Infromation"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/blood_type_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Blood Type: " />

                    <TextView
                        android:id="@+id/blood_type_input"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="O-neg"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>